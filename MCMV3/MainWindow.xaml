<Window x:Class="MCMV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MCMV3" Height="400" Width="630" ResizeMode="NoResize" WindowStyle="None" MouseDown="Window_MouseDown">
	<Grid>
		<Canvas>
			<Image Source="BG.png" Height="400"/>
			<Button x:Name="Btn_launch" Height="40" Width="100" Canvas.Left="508" Canvas.Top="340" Background="#7FDDDDDD" IsTabStop="False" FontSize="20" FontWeight="Bold" Click="Btn_launch_Click">启动</Button>
			<Button x:Name="Btn_config" Height="40" Width="100" Canvas.Left="20" Canvas.Top="340" Background="#7FDDDDDD" IsTabStop="False" FontSize="20" FontWeight="Bold" Click="Btn_config_Click">设置</Button>
			<ComboBox x:Name="List_ver"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="383" Canvas.Top="345" Height="30" FontSize="16" Background="#7FDDDDDD" DisplayMemberPath="Id"/>
		</Canvas>
	</Grid>
</Window>
