<Window x:Class="MCMV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MCMV3" Width="630" Height="400" ResizeMode="NoResize" WindowStyle="None"
        MouseLeftButtonDown="Window_MouseDown">
	<Grid>
		<Canvas>
			<Image Height="400" Source="BG.png" />
			<Button x:Name="BtnLaunch" Canvas.Left="508" Canvas.Top="340" Width="100" Height="40" Background="#7FDDDDDD"
			        IsTabStop="False" FontSize="20" FontWeight="Bold" Click="Btn_launch_Click">
				启动
			</Button>
			<Button x:Name="BtnConfig" Canvas.Left="20" Canvas.Top="340" Width="100" Height="40" Background="#7FDDDDDD"
			        IsTabStop="False" FontSize="20" FontWeight="Bold" Click="Btn_config_Click">
				设置
			</Button>
			<ComboBox x:Name="ListVersions" Canvas.Left="383" Canvas.Top="345" Width="120" Height="30"
			          HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Background="#7FDDDDDD"
			          DisplayMemberPath="Id" />
			<Button Width="40" Height="40" Margin="582,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
			        Click="ButtonBase_OnClick" Content="X" FontSize="30" Background="#00000000" BorderBrush="#00000000"
			        Foreground="Red" FontFamily="Bradley Hand ITC" ToolTip="关闭" FontWeight="Bold" />
		</Canvas>
	</Grid>
</Window>